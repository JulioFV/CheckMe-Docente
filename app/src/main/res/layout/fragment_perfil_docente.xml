<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#005c61"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:background="#005c61"
        android:id="@+id/btn_Perfil_back">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/regresar"
            android:background="#005c61"/>
    </androidx.cardview.widget.CardView>


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@drawable/fondo_tutor1"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/perfil_nombre"
                android:text="Nombre"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="30sp"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:background="#ffffff"
                android:elevation="4dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user" />

            <!-- Datos personales -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Titulo"
                android:textColor="#000000"
                android:textSize="18sp"
                android:id="@+id/miPerfil_titulo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Correo"
                android:textColor="#000000"
                android:textSize="18sp"
                android:id="@+id/miPerfil_correo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero de trabajador"
                android:textColor="#000000"
                android:textSize="18sp"
                android:id="@+id/miPerfil_NumTrabajador"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btn_editarDatos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar Datos"
                    android:backgroundTint="#54d9df"
                    android:textColor="#000000"
                    android:layout_marginRight="8dp"/>

                <Button
                    android:id="@+id/btn_guardarDatos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guardar Datos"
                    android:backgroundTint="#54d9df"
                    android:textColor="#000000"
                    android:layout_marginLeft="8dp"/>

            </LinearLayout>


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:background="@drawable/fondo">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#54d9df"
                        android:id="@+id/btn_miPerfil"
                        android:clickable="true"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/perfil"
                            android:layout_margin="5dp"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_misGrupos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#54d9df"
                        android:clickable="true"
                        app:cardCornerRadius="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:src="@drawable/personal" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#54d9df"
                        android:id="@+id/btn_paseDeLista"
                        android:clickable="true"
                        app:cardCornerRadius="30dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/prueba"
                            android:layout_margin="5dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>