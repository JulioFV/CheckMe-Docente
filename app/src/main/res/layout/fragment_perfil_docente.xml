<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fondo2"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:background="#005c61"
        android:id="@+id/btn_Perfil_back">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/regresar"
            android:background="@color/fondo2"/>
    </androidx.cardview.widget.CardView>


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_marginTop="20dp"
        android:background="@drawable/fondo_tutor1"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/perfil_nombre"
                android:text="Nombre"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/perfil_mtro"
                android:id="@+id/perfil_doc_img"
                />

            <!-- Datos personales -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Titulo"
                android:textColor="#000000"
                android:textSize="18sp"
                android:id="@+id/miPerfil_titulo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Correo"
                android:textColor="#000000"
                android:textSize="18sp"
                android:id="@+id/miPerfil_correo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero de trabajador"
                android:textColor="#000000"
                android:textSize="18sp"
                android:id="@+id/miPerfil_NumTrabajador"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/per_doc_txtgenero"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btn_editarDatos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar Datos"
                    android:backgroundTint="#54d9df"
                    android:textColor="#000000"
                    android:layout_marginRight="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btn_guardarDatos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guardar Datos"
                    android:backgroundTint="#54d9df"
                    android:textColor="#000000"
                    android:layout_marginLeft="8dp"
                    android:visibility="gone"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    <!--COMIENZA LA ISLA DE BOTONES -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/pistache"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        android:layout_margin="10dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/main_menu"
                android:id="@+id/perfil_btn_menu"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/perfil"
                android:id="@+id/perfil_btn_perfil"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/addtut"
                android:id="@+id/perfil_btn_addtut"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/grupos"
                android:id="@+id/perfil_btn_grupos"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/tutorados"
                android:id="@+id/perfil_btn_tutorados"
                />


        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <!--TERMINA LA ISLA DE BOTONES -->
</LinearLayout>