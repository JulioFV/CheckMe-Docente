<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    >

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_gpo_cdvasig"
    android:layout_margin="10dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="10dp"
    android:backgroundTint="@color/fondo2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp">


        <ImageView
            android:id="@+id/item_gpo_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"

            android:src="@drawable/grupos" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_gpo_icon"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/item_gpo_txtNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del grupo"
                android:gravity="center"
                android:textSize="20sp"
                android:enabled="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Clave:"

                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginEnd="16dp"/>

                <EditText
                    android:id="@+id/item_gpo_clave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Clave del Grupo"                        android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:enabled="false"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Docente:"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginEnd="16dp"/>

                <EditText
                    android:id="@+id/item_gpo_docente"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Nombre del docente"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Periodo:"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginEnd="16dp"/>

                <EditText
                    android:id="@+id/item_gpo_periodo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Periodo escolar"
                    android:enabled="false"

                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Opcion:"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:visibility="gone"
                    android:layout_marginEnd="16dp"/>

                <EditText
                    android:id="@+id/item_gpo_op2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="opcion"
                    android:inputType="number"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ver"

                    android:id="@+id/item_gpo_btnver"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/lapiz"
                    android:clickable="true"
                    android:id="@+id/it_btn_editar"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/eliminar"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:id="@+id/it_btn_eliminar"
                    />
                <ImageView
                    android:id="@+id/it_btn_grafica"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/g_pastel"

                    />



            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>