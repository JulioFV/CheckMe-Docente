
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_gpo_cdvasig"
    app:cardCornerRadius="15dp"
    app:cardElevation="15dp"
    android:layout_margin="7dp"
    android:backgroundTint="@color/fondo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/fondo2">
            <TextView
                android:id="@+id/item_gpo_txtNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del grupo"
                android:textSize="20sp"
                android:enabled="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID:Clave"
                android:textColor="@color/gris_claro3"
                android:textStyle="bold"
                android:textSize="15sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/item_gpo_clave"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/ic_grupo"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:text="Grupo de 25 estudiantes"
                android:id="@+id/it_grupo_txtestudiantes"
                android:textColor="@color/gris_claro2"
                android:maxLines="1"
                android:ellipsize="end"
                />

        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Periodo"
            android:textColor="@color/gris_claro2"
            android:textStyle="bold"
            />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Periodo"
                android:id="@+id/item_gpo_periodo"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profesor Asignado"
            android:textStyle="bold"
            android:textColor="@color/gris_claro2"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mario Perez"
            android:id="@+id/item_gpo_docente"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/gris_claro3"
            android:gravity="center"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2.5"
                android:clickable="true"
                android:id="@+id/item_gpo_btnver"
                android:background="@color/azul"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/azul"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="Lista de alumnos"
                        android:layout_margin="2dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/ic_editar"
                android:clickable="true"
                android:id="@+id/it_btn_editar"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_delete"
                android:layout_weight="1"
                android:clickable="true"
                android:id="@+id/it_btn_eliminar"
                />
            <ImageView
                android:id="@+id/it_btn_grafica"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/ic_pie"
                android:layout_marginRight="10dp"

                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>