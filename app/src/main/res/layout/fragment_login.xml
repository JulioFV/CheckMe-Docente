<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondo"
        android:gravity="center"
        android:orientation="vertical"
        >



        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/tutorados"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:background="#ffffff"
            android:padding="10dp"
            android:elevation="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fondo_tutor1"
            android:gravity="center"
            android:orientation="vertical">
            <!-- Título de Login -->
            <TextView
                android:id="@+id/loginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Login"
                android:textColor="#000000"
                android:textSize="32sp"
                android:textStyle="bold" />

            <!-- Campo de Usuario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/user" />

                <EditText
                    android:id="@+id/login_txtNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@drawable/fondo_edit_text"
                    android:hint="Nombre"
                    android:padding="16dp"
                    android:textColor="#000000"
                    android:textColorHint="#000000" />
            </LinearLayout>

            <!-- Campo de Contraseña -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                     />

                <EditText
                    android:id="@+id/Login_txt_Contrasenia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/fondo_edit_text"
                    android:hint="Contraseña"
                    android:padding="16dp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:password="true"/>
            </LinearLayout>

            <!-- Botón de Login -->

            <!-- Enlaces de "Forgot Password?" y "Signup" -->
            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#003f43"
                android:clickable="true"
                android:padding="16dp"
                android:text="Log In"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/login_forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:gravity="center"
                android:text="Olvidaste tu contraseña?"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/login_Recuperar_contra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:text="Recuperar Contraseña"
                android:textColor="#00aaa0"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>


</FrameLayout>